---
import Base from '@/layouts/Base.astro'
---

<Base meta={{ title: '404 | Page Not Found' }}>
  <section
    class="flex min-h-screen flex-col items-center justify-center px-6 py-12 text-center"
  >
    <h1 class="mb-4 text-5xl font-bold">404</h1>
    <p class="mb-6 text-lg">
      Sorry, the page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="border-2 border-black px-4 py-2 shadow-[4px_4px_0_0_#000] transition-transform duration-150 ease-in-out hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[8px_8px_0_0_#000]"
    >
      Go back home
    </a>
  </section>
</Base>
